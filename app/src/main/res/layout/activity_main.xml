<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/examButton"
        app:layout_constraintBottom_toBottomOf="@id/examButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/arrow"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/examButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/incorrectButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="단계별 문제"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
        android:id="@+id/incorrectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/examButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="오답 노트"/>

    <ImageButton
        android:id="@+id/userButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/examButton"
        app:layout_constraintBottom_toBottomOf="@id/examButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/examButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/easyLayout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/easy_shape"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:src="@drawable/coding"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/Difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쉬움"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/round_black"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/easyQuestionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이제 막 앱을 시작한 앱린이들의 기초 문제"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:background="@android:color/transparent"
                android:shadowRadius="10"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="0"/>

            <LinearLayout
                android:id="@+id/horizontalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/easyQuestionSolved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내가 푼 문제 : "
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@android:color/transparent"
                    android:shadowRadius="10"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>